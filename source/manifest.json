{
    "manifest_version": 2,
    "name": "TriliumClipper",
    "description": "A Thunderbird extension to clip messages to the TriliumNext notetaking application.",
    "version": "0.0.1",
    
    "author": "0xBismarck",
    "browser_specific_settings": {
        "gecko": {
            "id": "TriliumClipper@0xBismarck.com",
            "strict_min_version": "78.0"
        }
    },
    "message_display_action": {
        "default_popup": "messagePopup/popup.html",
        "default_title": "TriliumNext",
        "default_icon": "images/triliumnext-icon-32px.png"
    },
    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "messagesModify",
        "messagesRead",
        "storage",
        "menus",
        "downloads",
        "notifications",
        "<all_urls>"
    ],
    "icons": {
        "64": "images/triliumnext-icon-64px.png",
        "48": "images/triliumnext-icon-48px.png",
        "32": "images/triliumnext-icon-32px.png",
        "16": "images/triliumnext-icon-16px.png"
    }
}